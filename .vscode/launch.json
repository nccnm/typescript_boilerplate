    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": ["--config", "${workspaceRoot}/jest.config.js", "--runInBand", "--coverage", "false"],
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/dist/**/*"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
